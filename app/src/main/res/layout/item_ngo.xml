<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Logo and Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- NGO Logo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">

                <ImageView
                    android:id="@+id/ivNGOLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_ngo_placeholder" />

            </com.google.android.material.card.MaterialCardView>

            <!-- NGO Name and Location -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvNGOName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Global Food Initiative"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_verified"
                        android:tint="#4CAF50"
                        android:layout_marginStart="6dp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Los Angeles, CA"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" â­"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dedicated to eliminating hunger and improving food security through sustainable agriculture and community programs."
            android:textColor="#333333"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_campaign"
                android:tint="#666666"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvCampaigns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 campaigns"
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_meal"
                android:tint="#666666"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvMeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45,000 meals"
                android:textColor="#666666"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- Donate Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Donate to NGO"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:backgroundTint="#34C759"
            app:cornerRadius="12dp"
            app:elevation="0dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>